{
  "name": "@kodingdotninja/favicons-compiled",
  "version": "0.0.0",
  "workspaces": [
    "bench",
    "favicons-compiled",
    "favicons-compiled-cli"
  ],
  "type": "module",
  "scripts": {
    "# general commands": "--------------------------------------------------",
    "build": "turbo run build --scope=favicons-compiled --include-dependencies --no-deps",
    "clean": "turbo run clean",
    "deduplicate": "npx yarn-deduplicate && yarn install",
    "favicons": "yarn workspace favicons-compiled",
    "lint": "turbo run lint",
    "prepare": "husky install",
    "purge": "shx rm -rf node_modules/.cache/ favicons-compiled/.turbo/ bench/.turbo/",
    "release": "yarn workspace favicons-compiled np",
    "release:cli": "yarn workspace favicons-compiled-cli np",
    "test": "turbo run test",
    "#": "-------------------------------------------------------------------"
  },
  "turbo": {
    "baseBranch": "origin/main",
    "globalDependencies": [
      "yarn.lock"
    ],
    "pipeline": {
      "build": {
        "dependsOn": [
          "clean",
          "^build"
        ],
        "outputs": [
          "dist/**"
        ]
      },
      "clean": {
        "cache": false
      },
      "lint": {
        "dependsOn": [
          "^lint"
        ]
      },
      "test": {
        "dependsOn": [
          "^build"
        ]
      }
    }
  },
  "dependencies": {
    "@types/favicons": "6.2.2",
    "@vercel/ncc": "^0",
    "favicons": "7.0.0-beta.1"
  },
  "devDependencies": {
    "eslint": "^8",
    "eslint-config-kdnj": "^2",
    "husky": "^7",
    "lint-staged": "^12",
    "np": "^7",
    "shx": "^0",
    "turbo": "^1"
  },
  "eslintConfig": {
    "extends": [
      "eslint-config-kdnj"
    ],
    "ignorePatterns": [
      "*.min.cjs",
      "node_modules"
    ],
    "root": true
  },
  "lint-staged": {
    "*.{json,md}": [
      "prettier --write"
    ],
    "*.{js,ts}": [
      "eslint --fix"
    ]
  },
  "prettier": {
    "endOfLine": "auto",
    "printWidth": 120,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "all"
  },
  "private": true
}
